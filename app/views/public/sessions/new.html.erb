<div class="container d-flex justify-content-center align-items-center" style="height:80vh;">
  <div class="col-md-5">
    <div class="text-center">
      <h2 class ="mb-4">ログイン</h2>

      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= form_with(scope: :user, url: user_session_path, method: :post, local: true) do |f| %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>

      <div class="field mt-2">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field my-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン",class:"btn btn-submit" %>
      </div>
      <% end %>

      <div class="mt-5 text-center">
        <h5>まだアカウントをお持ちではない方</h5>
        <p>
          <%= link_to "こちら", new_user_registration_path %> から新規登録してください。
        </p>
      </div>

    </div>
  </div>
</div>
