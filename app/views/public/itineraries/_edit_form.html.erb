<table class="table table-borderless">
  <tr class="mb-3">
    <td><%= f.label :title, 'タイトル' %></td>
    <td><%= f.text_field :title,placeholder: '例: 夏の京都旅行（２０文字以内）',class: 'form-control'%></td>
  </tr>

  <tr class="mb-3">
    <td><%= f.label :region, '地域' %></td>
    <td><%= f.select :region,  Itinerary.regions.keys.map { |key| [I18n.t("enums.itinerary.region.#{key}"), key] }, { selected: @itinerary.region }, class: "form-control" %></td>
  </tr>

  <tr class="mb-3">
    <td><%= f.label :day_number, '日数' %></td>
    <td><%= f.number_field :day_number,placeholder: '旅行の日数',min: 1 ,class: 'form-control'%></td>
  </tr>
</table>

      