<table class="table table-borderless">
  <tr class="mb-2">
    <td><%= f.label :day_number, '日程' %></td>
    <td><%= f.number_field :day_number, min: 1,max:max_day, class: 'w-25 form-control' %>日目</br><p class="text-muted mt-1">※ しおりの日数の範囲内で選択してください</p></td>
  </tr>
  <tr class="mb-2">
    <td><%= f.label :start_time, '開始時間' %></td>
    <td><%= f.time_field :start_time,class: ' form-control' %></td>
  </tr>
  <tr class="mb-2">
    <td><%= f.label :name, '行き先' %></td>
    <td><%= f.text_field :name, placeholder: '行き先名',class: 'form-control' %></td>
  </tr>
  <tr class="mb-2">
    <td>郵便番号</td>
    <td><%= text_field_tag :zipcode, nil, class: "form-control", placeholder: "郵便番号" %></td>
  </tr>
  <tr class="mb-2">
    <td><%= f.label :address, '住所' %></td>
    <td><%= f.text_field :address, placeholder: '（任意）',class: 'form-control' %></td>
  </tr>
  <tr class="mb-2">
    <td><%= f.label :notes, '' %></td>
    <td><%= f.text_area :notes,placeholder: '（任意）',class: 'form-control' %></td>
  </tr>
</table>