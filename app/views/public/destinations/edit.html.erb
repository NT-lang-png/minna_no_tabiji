

<div class="container">
  <!-- 行き先を編集しよう -->
  <div class="row my-3">
    <h3>
      行き先を編集しよう
    </h3>
  </div>

  <!-- メインコンテンツを中央揃え -->
  <div class="row">

    <div class="col-5">
      <!-- しおりタイトル -->
      <div class="shadow card-body">
        <div class="bg-light p-2">
          <h4>タイトル：<%= @itinerary.title %></h4>
        </div>

        <div class="mt-3 d-flex">
          <div class ="d-flex">
          <!-- しおり情報 -->
            <div class="mr-2 ">地域：<%= @itinerary.region %></div>
            <div>日数：<%= @itinerary.day_number %>日間</div>
          </div>
        </div>
      </div>
    </div>

    <!-- 行き先編集フォーム -->
    <div class="col-7">
      <div class="row shadow">
        <div class="card-body">
          <h2 class="mt-2 mb-3">行き先リスト更新</h2>

          <%= form_with model:[@itinerary,@destination], url:itinerary_destination_path(@itinerary,@destination), method: :patch, local: true do |f| %>

          <%= render 'destination_form', f: f %>

          <div class="m-4 d-flex justify-content-center">
            <%= f.submit '更新する', class: 'btn btn-submit w-50' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
