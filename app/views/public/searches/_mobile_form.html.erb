<!-- ボタン -->
<div data-toggle="modal" data-target="#demoNormalModal">
  <i class="search-icon fa-solid fa-magnifying-glass"></i>
</div>

<!-- モーダルダイアログ -->
<div class="modal fade" id="demoNormalModal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="demoModalTitle">しおり検索</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form_with url: search_path, method: :get, local: true do |f| %>
            <div class="input-group">
              <%= f.text_field :content, class: "form-control search-input rounded-start", placeholder: "検索キーワード", required: true %>
              <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary rounded-end">
                  <i class="fa-solid fa-magnifying-glass"></i>
                </button>
              </div>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる<i class="fa-thin fa-xmark"></i></button>
        </div>
    </div>
  </div>
</div>

