<div class="container d-flex justify-content-center align-items-center" style="height:100vh;">
  <div class="row w-50">
    <div class="col offset-1 m-4">
      <h2>新規会員登録</h2>

      <%= form_with(url: registration_path(resource_name), method: :post, local: true) do |f| %>

      <%= render "public/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <label for="handle_name" class="form-label">ハンドルネーム</label>
        <input type="text" id="handle_name" name="user[handle_name]" class="form-control" required placeholder="ハンドルネーム">
      </div>

      <div class="mb-3">
        <label for="id" class="form-label">ユーザーID</label>
        <input type="text" id="id" name="user[user_id]" class="form-control" required placeholder="taro1234">
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">メールアドレス</label>
        <input type="email" id="email" name="user[email]" class="form-control" required placeholder="sample@example.com">
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">パスワード（6文字以上）</label>
        <input type="password" id="password" name="user[password]" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="password_confirmation" class="form-label">パスワード（確認用）</label>
        <input type="password" id="password_confirmation" name="user[password_confirmation]" class="form-control" required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-success">新規登録</button>
      </div>
      <% end %>

      <div class="mt-4 text-center">
        <h5>既に登録済みの方</h5>
        <p>
          <%= link_to "こちら", new_user_session_path %> からログインしてください。
        </p>
      </div>
    </div>
  </div>
</div>