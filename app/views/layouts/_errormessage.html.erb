<!-- <%#= render 'layouts/errormessage', obj: @ %> を書いて呼び出す　-->

<% if obj.errors.any? %>
  <div id="error_explanation">
    <p class ="error-title"><%= pluralize(obj.errors.count, "件") %>のエラーが発生しました。</p>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li class ="error-text"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

