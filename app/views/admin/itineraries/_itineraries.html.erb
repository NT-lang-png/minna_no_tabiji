<!-- しおりタイトル -->
<div class="border border-secondary card-body my-1 p-2">
  <div class="d-flex p-1 justify-content-between">
    <%= link_to admin_itinerary_path(itinerary), class:"text-dark text-decoration-underline" do %>
      <div>タイトル：<%= itinerary.title %></div>
    <% end %>
    <div>
      <%= link_to '不適切な投稿として削除', admin_itinerary_path(itinerary), method: :delete, 
                  data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-caution mr-2" %>
    </div>
  </div>



  <div class ="mt-2 d-flex justify-content-between">
  <!-- しおり情報 -->
    <div>投稿日時：<%= itinerary.created_at.strftime('%Y/%m/%d %H:%M:%S') %></div>
    <div>行き先登録数：<%= itinerary.destinations.count %>件</div>
    <div>コメント数：<%= itinerary.post_comments.count %>件</div>
  </div>

</div>
