<div class="border border-secondary">
  <div class="card-body">
    <table class='table table-borderd'>
      <!-- ユーザー画像 -->
      <tr>
        <td colspan="2" style="height: 10%;">
          <div class ="row">
            <div class ="col-5">
              <div class="square d-flex justify-content-center align-items-center">
                <%= image_tag user.get_image, class: "img-fluid" %>
              </div>
            </div>
            <div class ="col-6  d-flex align-items-end">
              <!-- 編集ボタン -->
              <div class ="w-100 d-flex justify-content-end" >
                <%= link_to '編集',edit_admin_user_path(user), class: "btn btn-outline-secondary my-3 w-100" %> 
              </div>
            </div>
          </div>
        </td>
      </tr>

      <tr>
        <td>ユーザー名</td>
        <td>
          <%= user.handle_name %>
        </td>
      </tr>
      <tr>
        <td>ユーザーID</td>
        <td><%= user.user_id %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= user.email %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td>
          <!--ユーザーヘルパーに記述-->
          <span class="<%= user_status_class(user) %>">
            <%= user_status(user) %>
          </span>
        </td>
      </tr>
      <tr>
        <td>投稿数</td>
        <td><%= user.itineraries.count %>件</td>
      </tr>
      <tr>
        <td>ブックマーク数</td>
        <td><%= user.bookmarks.count %>件</td>
      </tr>
      <tr>
        <td>自己紹介文</td>
        <td><%= user.introduction %></td>
      </tr>


      <!--  フォローフォロワー数　フェーズ２で実装
      <tr>
        <th>follows</th>
        <th>
          <%#= link_to user_followings_path(user) do %>
          <%#= user.followings.count %>
          <%# end %>
        </th>
      </tr>
      <tr>
        <th>followers</th>
        <th>
          <%#= link_to user_followers_path(user) do %>
          <%#= user.followers.count %>
          <%# end %>
        </th>
      </tr>
      -->

    </table>
  </div>
</div>




